@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Bookmark Manager</title>
    <!--<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">-->
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="~/css/bootstrap-tagsinput.css" />
</head>
<body>
    <!-- Show messages (if any) -->
    <!-- <% if notice %>
    <div id="notice"><%= notice %></div>
    <% end %> -->
    <!-- Show devise errors (if any) -->
    <!-- <%= devise_error_messages! %> -->
    <!-- Toolbar -->
    <nav class="header">
        <div class="container">
            <div class="navbar-header">
                @if (library.IsLoggedOn())
                {
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bookmark-navbar-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                }
                <a href="/" class="navbar-brand">Bookmark Manager</a>
            </div>
            @if (library.IsLoggedOn())
            {
                <div class="collapse navbar-collapse" id="bookmark-navbar-collapse">
                    @Umbraco.RenderMacro("loginStatus")
                </div>
            }

        </div>
    </nav>
    <main>
        @RenderBody()
    </main>
    <script src="~/Scripts/bootstrap-tagsinput.min.js" type="text/javascript" />
</body>
</html>
